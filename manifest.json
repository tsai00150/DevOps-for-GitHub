{
  "name": "GitHub For DevOps",
  "description": "A Google Chrome extension that can visualize DevOps evaluation metrics.",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
      "default_popup": "index.html"
  },
  "background": {
      "service_worker": "./scripts/background.js",
      "type": "module"
  },
  "manifest_version": 3,
  "version": "1.0.1",
  "sandbox": {
    "pages": [
      "index.html"
    ]
  },
  "content_security_policy": {
    "sandbox": "sandbox allow-scripts; script-src 'unsafe-inline' 'self' https://www.gstatic.com"
  }
}